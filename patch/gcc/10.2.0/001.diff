+
+/* Useful if you wish to make target-specific GCC changes. */
+#undef TARGET_BOLTHUR
+#define TARGET_BOLTHUR 1
+
+/* Machine dependent libraries. */
+#undef LIB_SPEC
+#define LIB_SPEC "-lc -lg -lm  %{!specs=bolthur.specs:-lgloss-bolthur}" /* link against C standard library */
+
+/* Linker enforce 4K pages */
+#undef LINK_SPEC
+#define LINK_SPEC "-z max-page-size=4096"
+
+/* Files that are linked before user code. */
+#undef STARTFILE_SPEC
+#define STARTFILE_SPEC "bolthur-crt0.o%s crti.o%s crtbegin.o%s"
+
+/* Files that are linked after user code. */
+#undef ENDFILE_SPEC
+#define ENDFILE_SPEC "crtend.o%s crtn.o%s"
+
+///* Include directory */
+//#undef GPLUSPLUS_INCLUDE_DIR
+//#define GPLUSPLUS_INCLUDE_DIR "/usr/include/g++"
+//
+//#undef GCC_INCLUDE_DIR
+//#define GCC_INCLUDE_DIR "/usr/include"
+//
+///* Compiler backend folder */
+//#undef STANDARD_EXEC_PREFIX
+//#define STANDARD_EXEC_PREFIX "/usr/libexec/"
+//
+///* Start file prefix  */
+//#undef STANDARD_STARTFILE_PREFIX
+//#define STANDARD_STARTFILE_PREFIX "/usr/lib/"
+
+/* Additional predefined macros. */
+#undef TARGET_OS_CPP_BUILTINS
+#define TARGET_OS_CPP_BUILTINS() \
+  do { \
+    builtin_define ( "__bolthur__" ); \
+    builtin_define ( "__unix__" ); \
+    builtin_assert ( "system=bolthur"); \
+    builtin_assert ( "system=unix"); \
+  } while(0);
