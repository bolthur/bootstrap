+  }
+  if ( prot & PROT_EXEC ) {
+    sys_prot |= MEMORY_ACQUIRE_PROTECTION_EXECUTABLE;
+  }
+
+  // shared mapping and fixed mapping are not yet supported
+  if (
+    ( flags & MAP_SHARED )
+    || ( flags & MAP_FIXED )
+  ) {
+    errno = EINVAL;
+    return MAP_FAILED;
+  }
+
+  // handle file descriptor
