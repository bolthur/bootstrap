+/**
+ * @brief Read implementation
+ *
+ * @param file
+ * @param ptr
+ * @param len
+ * @return
+ *
+ * @todo add support for stdin
+ * @todo remove __weak_symbol once finished
+ */
+__weak_symbol ssize_t _read( int file, void* ptr, size_t len ) {
+  // variables
+  vfs_read_request_t request;
+  vfs_read_response_t response;
+  size_t read_amount = 0;
+  char* buf = ( char* )ptr;
+  // handle no daemon
+  if ( ! _message_has_by_name( VFS_DAEMON_NAME ) ) {
+    return -1;
+  }
+  /// FIXME: Add stdin handling
+  if ( file == STDIN_FILENO ) {
+    return -1;
+  }
+
+  while( read_amount < len ) {
+    // set amount to read
+    size_t amount = len > MAX_READ_LEN ? MAX_READ_LEN : len;
+
+    // allocate message structures
+    memset( &request, 0, sizeof( vfs_read_request_t ) );
+    memset( &response, 0, sizeof( vfs_read_response_t ) );
+    // prepare message structure
+    request.len = amount;
+    request.handle = file;
+    // prepare read
+    size_t message_id = 0;
+    bool send = true;
+    // loop until message has been sent and answer has been received
+    while( true ) {
+      // send message ( may be delayed when vfs is starting up )
+      while ( send && 0 == message_id ) {
+        message_id = _message_send_by_name(
+          VFS_DAEMON_NAME,
+          VFS_READ_REQUEST,
+          ( const char* )&request,
+          sizeof( vfs_read_request_t ),
+          0 );
+      }
+      // wait for response
+      _message_wait_for_response(
+        ( char* )&response,
+        sizeof( vfs_read_response_t ),
+        message_id );
+      // handle error / no message
+      if ( errno ) {
+        send = false;
+        continue;
+      }
+      // exit loop
+      break;
+    }
+    // special error handling
+    if ( response.len < 0 ) {
+      errno = -response.len;
+      return -1;
+    }
+    // handle 0
+    if ( response.len == 0 ) {
+      return 0;
+    }
+    // copy content
+    memcpy( buf + read_amount, response.data, amount );
+    // increase by amount read
+    read_amount += amount;
+  }
+  // return read amount
+  return ( ssize_t )read_amount;
+}
