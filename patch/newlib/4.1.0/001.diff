+
+#include <libgen.h>
+#include <string.h>
+#include <stdlib.h>
+#include <sys/cdefs.h>
+
+__weak_symbol char* basename( char* path ) {
+  // allocate dot for return
+  char* dot = malloc( 2 );
+  // handle error
+  if ( ! dot ) {
+    return NULL;
+  }
+  size_t len = strlen( path );
+  // handle empty or invalid path
+  if ( ! path || 0 == len ) {
+    // copy over content
+    dot = strcpy( dot, "." );
+    // return finally
+    return dot;
+  }
+
+  // start at end of string
+  char* p = path + len - 1;
+  // loop until non separator found
+  while( *p == '/' && p != path ) {
+    p--;
+  }
+  // handle nothing ( return given path )
+  if ( p == path ) {
+    return path;
+  }
+  // save end
+  char* end = p;
+  // loop until next separator
+  while ( *p != '/' && p >= path ) {
+    p--;
+  }
+  p++;
+  // save start
+  char* start = p;
+
+  // free dot above and allocate new memory
+  free( dot );
+  size_t new_size = ( size_t )( end - start + 2 );
+  char* new_basename = malloc( sizeof( char ) * new_size );
+  if ( ! new_basename ) {
+    return NULL;
+  }
+  // copy content and add string termination
+  memcpy( new_basename, start, new_size - 1 );
+  new_basename[ new_size - 1 ] = '\0';
+  // return allocated char array
+  return new_basename;
+}
