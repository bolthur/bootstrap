+
+#include <stdio.h>
+#include <stdlib.h>
+#include <errno.h>
+#include <sys/cdefs.h>
+#include <sys/bolthur.h>
+
+__weak_symbol int _execve( char* name, char** argv, char** env ) {
+  // open file to read binary
+  FILE* fp = fopen( name, "rb" );
+  if ( ! fp ) {
+    errno = EACCES;
+    return -1;
+  }
+  // image pointer offset and read size
+  uint8_t* image = NULL;
+  size_t offset = 0;
+  size_t read_size = 32;
+  // load until end of file
+  while ( ! feof( fp ) ) {
+    // allocate / extend
+    image = realloc( image, sizeof( uint8_t ) * read_size );
+    // handle possible error
+    if ( ! image ) {
+      free( image );
+      errno = ENOMEM;
+      return -1;
+    }
+    // reset errno and read chunk
+    errno = 0;
+    fread( image + offset, sizeof( uint8_t ), read_size, fp );
+    // handle possible error
+    if ( errno ) {
+      free( image );
+      return -1;
+    }
+    // increase offset
+    offset += read_size;
+  }
+  // create process
+  _process_replace( ( void* )image, name );
+  // clear image
+  free( image );
+  // set errno if not already set
+  if ( ! errno ) {
+    errno = ENOEXEC;
+  }
+  return -1;
+}
