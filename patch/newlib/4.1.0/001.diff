+
+/**
+ * @brief Set errno if set from system call
+ *
+ * @param n
+ * @return int
+ */
+int _set_errno( int val, int err ) {
+  // sett errno and return -1
+  if ( err < 0 ) {
+    errno = -err;
+    return -1;
+  }
+  // unset errno and return value
+  errno = 0;
+  return val;
+}
