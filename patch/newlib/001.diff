+/* forward declaration */
+int main(int argc, char *argv[], char *env[]);
+static int _main(int argc, char *argv[]) __attribute__((noreturn));
+
+#if __thumb__ && !defined(PREFER_THUMB)
+asm("\n"
+	".code 32\n"
+	".global _start\n"
+	".type _start, %function\n"
+	"_start:\n"
