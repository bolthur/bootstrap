+
+extern char _end[];
+static void *curbrk = _end;
+
+extern void *_brk(void *addr);
+
+int brk(void *addr)
+{
+	void *newbrk;
+	if (curbrk == addr)
+		return 0;
+	newbrk = _brk(addr);
+	curbrk = newbrk;
+	if (newbrk < addr) {
+		errno = ENOMEM;
+		return -1;
+	}
+	return 0;
+}
