+#include <errno.h>
+#include <stdint.h>
+
+extern char _end[];
+static void *curbrk = _end;
+
+extern void *_brk(void *addr);
+
+int brk(void *addr)
+{
+	void *newbrk;
+	if (curbrk == addr)
+		return 0;
+	newbrk = _brk(addr);
+	curbrk = newbrk;
+	if (newbrk < addr) {
+		errno = ENOMEM;
+		return -1;
+	}
+	return 0;
+}
+
+void *_sbrk(intptr_t incr)
+{
+	void *oldbrk = curbrk;
+	if (brk(oldbrk + incr) == -1)
+		return (void *)-1;
+	return oldbrk;
+}
+
+void *sbrk(intptr_t incr) __attribute__((alias("_sbrk")));
+
+int _set_errno(int n)
+{
+	if (n < 0) {
+		errno = -n;
+		return -1;
+	}
+	return n;
+}
